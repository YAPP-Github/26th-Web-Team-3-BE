root = true

[*]
charset=utf-8
end_of_line=lf
indent_style=space
indent_size=4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
tab_width = 4
disabled_rules=no-wildcard-imports,comment-spacing

[*.{kt,kts}]
ij_kotlin_imports_layout = *,java.**,javax.**,kotlin.**
ij_kotlin_package_entry_layout = *,java,javax,kotlin
ij_kotlin_allow_trailing_comma = true
