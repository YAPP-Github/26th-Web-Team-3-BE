<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">

    <property name="APP_NAME" value="${spring.application.name}"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${logging.pattern.console:-%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg [%X{requestId}]%n}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <springProfile name="dev">
        <property name="LOG_FILE_PATH_DEV" value="logs/dev"/>
        <property name="LOG_FILE_NAME_DEV" value="${APP_NAME}"/>

        <appender name="FILE-DEV-JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_FILE_PATH_DEV}/${LOG_FILE_NAME_DEV}.json.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_FILE_PATH_DEV}/${LOG_FILE_NAME_DEV}.%d{yyyy-MM-dd}.json.log</fileNamePattern>
                <maxHistory>30</maxHistory>
                <totalSizeCap>1GB</totalSizeCap>
            </rollingPolicy>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"application":"${APP_NAME}", "environment":"dev"}</customFields>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE-DEV-JSON"/>
        </root>

        <logger name="com.yapp.demo" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE-DEV-JSON"/>
        </logger>
        <logger name="org.springframework.jdbc" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
    </springProfile>

    <springProfile name="prod">
        <property name="LOG_FILE_PATH_PROD" value="logs/prod"/>
        <property name="LOG_FILE_NAME_PROD" value="${APP_NAME}"/>

        <appender name="FILE-PROD-JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_FILE_PATH_PROD}/${LOG_FILE_NAME_PROD}.json.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_FILE_PATH_PROD}/${LOG_FILE_NAME_PROD}.%d{yyyy-MM-dd}.json.log</fileNamePattern>
                <maxHistory>60</maxHistory> <totalSizeCap>2GB</totalSizeCap> </rollingPolicy>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"application":"${APP_NAME}", "environment":"prod"}</customFields>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE-PROD-JSON"/>
        </root>

        <logger name="com.yapp.demo" level="INFO" additivity="false"> <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE-PROD-JSON"/>
        </logger>
        <logger name="org.springframework.jdbc" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="org.hibernate.SQL" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
    </springProfile>

    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.yapp.demo" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="org.springframework.jdbc" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
    </springProfile>

</configuration>
